@model Trizoob.Models.Publication
<div class="pub" style="margin: 10px; padding:10px; display:flex; flex-flow: row;">
    <div class="container col-sm-2 col-md-2 col-lg-2" style="border-radius:7px;">
        @if (@Model.DataUrl.EndsWith(".jpg"))
        {
            string FileName = System.IO.Path.GetFileName(@Model.DataUrl);
            <a asp-asp-page-handler="DownloadFile" asp-route-fileName="@FileName">
                <img src="@Model.DataUrl" alt="picture" height="200" width="150" style="width:100%"/>
            </a>
        }
        else if (@Model.DataUrl.EndsWith(".mp4"))
        {
            <video src="@Model.DataUrl" controls height="200"></video>
        }
    </div>
    <div class="container col-sm-10 col-md-10 col-lg-10">
        <h4 style="text-align:center; letter-spacing:1px; color:darkorchid; font-weight:700; font-style:italic;">@Model.Header</h4>
        <span style="text-align:left;">@Model.Description</span>
        <div class="" style="display:flex; flex-direction:row; justify-content:space-between; margin-top:20px">
            <div>
                <span style="text-align:left; font-weight:700">@Model.CreatedAt</span>
                <span style="text-align:left; color:maroon; font-weight:700;">@Model.Author.Name</span>
            </div>
            <div>
                <div id="like_@Model.Id" class="blike btn btn-success" style="border-radius:50%; width:44px; height:40px;">
                    <span>@Model.Likes</span>
                    <img src="~/images/like.png" alt="like" width="100%" height="100%" />
                </div>
                <div id="dislike_@Model.Id" class="bdislike btn btn-danger" style="border-radius:50%; width:44px; height:40px;">
                    <span>@Model.Dislikes</span>
                    <img src="~/images/dislike.png" alt="dislike" width="100%" height="100%" />
                </div>
            </div>
        </div>
   </div>
</div>

